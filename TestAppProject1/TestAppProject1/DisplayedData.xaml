<UserControl x:Class="TestAppProject1.DisplayedData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestAppProject1"
             mc:Ignorable="d" Height="395" Width="580" Margin="5" >
    <Grid>
        <StackPanel>
            
            <Button x:Name="UpdateData" Content="Update Table" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Click="UpdateData_Click"/>
            <TextBlock x:Name="Textblock_TodaysDate" FontWeight="Bold" Height="auto" Width="auto" HorizontalAlignment="Center"/>
            <DataGrid x:Name="DataGrid_NewData" Width="580" Height="300" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="White"/>
            
        </StackPanel>
    </Grid>
</UserControl>
